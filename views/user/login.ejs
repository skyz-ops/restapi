<%- include('../layouts/header') %>

    <body class="login-page">
        <div class='loader'>
            <div class='spinner-grow text-mel' role='status'>
                <span class='sr-only'>Loading...</span>
            </div>
        </div>
        <div class="container login-page no-loader">
            <div class="row justify-content-md-center">
                <div class="col-md-12 col-lg-4">
                    <div class="card login-box-container">
                        <div class="card-body">
                            <div class="authent-logo">
                                <img src="/images/logo.png" alt="logo" width="40">
                            </div>
                            <div class="authent-text">
                                <p>Selamat datang di Caliph Rest API!</p>
                            </div>

                            <%- include('../layouts/msg') %>
                                <%- include('../layouts/errors') %>

                                    <form method="POST" action="/users/login">
                                        <div class="mb-3">
                                            <div class="form-floating">
                                                <input id="username" name="username" type="text" class="form-control"
                                                    id="floatingInput" placeholder="Ndasmu">
                                                <label for="floatingInput">Username</label>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-floating">
                                                <input id="password" name="password" type="password"
                                                    class="form-control" id="floatingPassword" placeholder="Password">
                                                <label for="floatingPassword">Password</label>
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-mel m-b-xs"
                                                class="a-mel">Masuk</button>
                                        </div>
                                    </form>
                                    <div class="authent-reg">
                                        <p>Belum punya akun? <a href="/users/register" class="a-mel">Daftar</a></p>
                                    </div>
                                    <div class="authent-reg">
                                        <p>Lupa password? <a href="/users/lupapassword" class="a-mel">Klik disini</a>
                                        </p>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../layouts/footer') %>